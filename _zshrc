#!/bin/zsh
REPOS="$HOME/repos"

#Source our Exports First
source $HOME/.exports

#Aliases
source $HOME/.aliases

#Functions
source $HOME/.functions

#IHM aliases
source $REPOS/ihm-rc/.ihmrc

#ZSH Stuff
ZSH=$HOME/repos/dotfiles/_oh-my-zsh
ZSH_THEME="mross"
COMPLETION_WAITING_DOTS="true"

# The following lines were added by compinstall
zstyle :compinstall filename '~/.zshrc'
autoload -Uz compinit
compinit
# End of lines added by compinstall

#Oh My ZSH Plugins
plugins=(aws \
         brew \
         common-aliases \
         debian \
         dircycle \
         dirhistory \
         docker \
         fasd \
         git-extras \
         gitfast \
         github \
         gradle \
         httpie \
         jira \
         mvn \
         npm \
         pip \
         pyenv \
         pyling \
         python \
         redis-cli \
         supervisor \
         urltools \
         virtualenvwrapper \
         websearch \
         vagrant)
source $ZSH/oh-my-zsh.sh
